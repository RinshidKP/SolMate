<%-include("./layouts/header.ejs")%>




<style>
  body {
    background-color: #f9f9f9;
  }

  .card {
    border: 1px solid #ccc;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #ffffff;
  }

  .form-control {
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 10px;
  }

  .btn-signin {
    background-color: #F07C3A;
    color: #fff;
    width: 200px;
    border: none;
    border-radius: 5px;
    padding: 10px;
    cursor: pointer;
  }

  .btn-signin:hover {
    background-color: #F07C3A;
  }
</style>
</head>

<body>
  <section class="h-100 h-custom">
    <div class="container h-100 mt-5 mb-5">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-8 col-xl-6">
          <div class="card rounded-3">
            <div class="card-body shadow p-md-5">
              <h1 class="pb-2 pb-md-0 mb-md-5 px-md-2 text-center " style="color: #F07C3A;">Sign in</h1>

              <form action="/login" method="post" class="px-md-2 mt-2">
                <hr>

                <div class="row mb-4 mt-5">
                  <div class="col-md-4">
                    <label class="form-label pt-2" for="form3Example1q">Enter Username</label>
                  </div>
                  <div class="col-md-8">
                    <input type="text" id="form3Example1q" class="form-control" name="username" placeholder="Enter Username" />
                  </div>
                </div>

                <div class="row mb-4">
                  <div class="col-md-4">
                    <label class="form-label pt-2 mt-3" for="form3Example1q">Enter Password</label>
                  </div>
                  <div class="col-md-8">
                    <input type="password" id="form3Example1q" class="form-control password mt-3" name="password" placeholder="Enter Your Password" />
                  </div>
                </div>

                <div class="d-flex justify-content-center container">
                  <p class="mt-3 ">Don't have an account? <a style="text-decoration: none;" href="/signup">Create an Account</a></p>
                </div>

                <div class="d-flex justify-content-center">
                  <p class="text-danger"><%=message%></p>
                </div>

                <div>
                  <div class="form-check d-flex justify-content-center">
                    <a style="text-decoration: none;" href="/signin/forgot">Forgot
                      password</a>
                  </div>
                </div>

                <div class="d-flex justify-content-center">

                  <button type="submit" class="btn btn-signin mt-5">Sign In</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>

</html>