          $(".cardx").click(function () {//Clicking the card
              var inputElement = $(this).find('input[type=radio]').attr('id');
              // console.log(inputElement);
              btnShow();
              unclickRadio();
              removeActive();
              makeActive(inputElement);
              clickRadio(inputElement);
          });
      });

      function btnShow() {
          $("#address-btn").css("display", "block");
      }

      function unclickRadio() {
          $("input:radio").prop("checked", false);
      }

      function clickRadio(inputElement) {
          $("#" + inputElement).prop("checked", true);
      }

      function removeActive() {
          $(".card").removeClass("active");
      }

      function makeActive(element) {
          $("#" + element + "-card").addClass("active");
      }
      
    function addShipping(shippingCost, totalPrice) {
    const selectedOption = document.querySelector('input[name="shippingOption"]:checked').value;
    console.log("Selected shipping option:", selectedOption);

    // Update shipping price
    const shippingPriceElement = document.getElementById('shippingPrice');
    shippingPriceElement.textContent = shippingCost;

    // Update total cart price
    const couponShowElement = document.querySelector('.couponShow');
    const couponText = couponShowElement.textContent;
    console.log(couponText)

    const totalPriceElement = document.getElementById('totalPriceValue');
    const newTotalPrice = parseFloat(totalPrice) + parseFloat(shippingCost)-parseFloat(couponText);
    totalPriceElement.textContent = newTotalPrice;
  }



