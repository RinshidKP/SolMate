<%- include("./layout/header.ejs") %>
<style>
  /* Add custom styles as per your requirements */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

.row {
  margin-left: -15px;
  margin-right: -15px;
}

.col-lg-8 {
  flex-basis: 66.66%;
  max-width: 66.66%;
}

.col-lg-4 {
  flex-basis: 33.33%;
  max-width: 33.33%;
}

.checkout__form {
  margin-bottom: 30px;
}

.checkout__form h4 {
  margin-bottom: 20px;
}
body {
    font-family: 'Roboto', sans-serif;
    background-color: #f8f8f8;
  }
.form-group {
  margin-bottom: 30px;
}

.cardx {
  border: none;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  transition: box-shadow 0.3s ease;
}

.cardx:hover {
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
}

.card-title {
  margin-bottom: 0;
}

.checkout__order {
  background-color: #f8f8f8;
  padding: 30px;
}

.checkout__order h4 {
  margin-bottom: 20px;
}

.checkout_order_products {
  font-weight: bold;
  margin-bottom: 10px;
}

.checkout_order_subtotal,
.checkout_order_total {
  margin-top: 20px;
  margin-bottom: 10px;
  font-weight: bold;
}

.site-btn {
  display: inline-block;
  background-color: #4caf50;
  color: #ffffff;
  padding: 12px 30px;
  font-size: 14px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1px;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.site-btn:hover {
  background-color: #45a049;
}

</style>
<section class="checkout spad mt-5 mb-2">
  <div class="container">
    <div class="checkout__form mt-5 mb-0">

      <div class="row m-5">
        <div class="col-lg-8">
          <h4>Billing Details</h4>
        </div>
        <div class="col-lg-4">
          <form class="mb-3" id="couponForm">
            <div class="input-group">
              <input type="text" id="couponName" pattern="^(?!.*\s)[^\s]+(?<!\s)$" class="form-control border-0 form-control-sm text-dark font-weight-bold" style="box-shadow: none;background-color: #f5f5f5;" placeholder="Coupon Code" required>
              <div class="input-group-append">
                <button type="submit" class="btn btn-sm btn-dark">Apply Coupon</button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6 col-md-7 mt-2">
            <div class="form-group">
              <div class="row">
                <div class="col-md-4">
                  <div class="card mb-4">
                    <div class="card-body" role="button">
                      <h5 class="card-title">
                        <input id="cod" value="cod" name="payment" type="radio">
                        <label for="cod">Cash On Delivery</label>
                      </h5>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="card mb-4">
                    <div class="card-body" role="button">
                      <h5 class="card-title">
                        <input id="Online" value="online" name="payment" type="radio">
                        <label for="Online">Online Payment</label>
                      </h5>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="card mb-4">
                    <div class="card-body" role="button">
                      <h5 class="card-title">
                        <input id="wallet" value="wallet" name="payment" type="radio">
                        <label for="wallet">Wallet Payment</label>
                      </h5>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <input type="hidden" id="addressId" name="addressId" value="<%= addressId %>">
          <div class="col-lg-6 col-md-5 mt-2">
            <div>
              <h4><u>Shipping Methods</u></h4>
            </div>
            <div class="row">
              <div class="col-12">
                <div class="card-body shadow rounded mb-5">
                  <div class="form-check">
                    <input onchange="addShipping('0','<%=cart.totalPrice%>')" class="form-check-input" type="radio"
                      name="shippingOption" id="normalShipping" value="normal" checked>
                    <label class="form-check-label" for="normalShipping">
                      Normal
                    </label>
                  </div>
                </div>
              </div>
              <div class="col-12">
                <div class="card-body shadow rounded mb-5">
                  <div class="form-check">
                    <input onchange="addShipping('40','<%=cart.totalPrice%>')" class="form-check-input" type="radio"
                      name="shippingOption" id="fastShipping" value="fast">
                    <label class="form-check-label" for="fastShipping">
                      Fast
                    </label>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <h4>Your Order</h4>
              </div>
              <div class="col-md-12 checkout_order_products">
                  <div class="row">
                    <div class="col-md-6">
                      <h6 class="font-weight-medium">Products</h6>
                    </div>
                    <div class="col-md-6 text-md-right">
                      <h6 class="font-weight-medium"> <ul> Sub Total   :<span><%=cart.totalPrice%> </ul></span></h6>
                    </div>
                  </div>
                </div>
                <div class="col-md-12">
                  <ul class="text-md-right">
                    <li>
                      <h6 class="font-weight-medium">
                        <span>Shipping</span>
                        $<span id="shippingPrice">0</span>
                      </h6>
                    </li>
                    <li>
                      <h6 class="font-weight-medium">
                        <span>Coupon</span>
                        $<span class="couponShow">0</span>
                      </h6>
                    </li>
                    <input type="hidden" name="session" value="<%=session%>">
                  </ul>
                </div>
                <div class="col-md-12">
                  <input type="hidden" name="totalPrice" value="<%= cart.totalPrice %>">
                </div>
                <div class="col-md-12 checkout_order_total">
                  <div class="row">
                    <div class="col-md-6">
                      <h6 class="font-weight-medium">Total</h6>
                    </div>
                    <div class="col-md-6 text-md-right">
                      <span>$<span id="totalPriceValue"><%= cart.totalPrice %></span></span>
                    </div>
                  </div>
                </div>
                <div class="col-md-12">
                  <button type="button" onclick="placeorder()" class="btn btn-dark rounded">PLACE ORDER</button>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </form>
    </div>
  </div>
</section>



<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.3/axios.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

  <script>
      $(document).ready(function () {
        
   
          $(".cardx").click(function () {//Clicking the card
              var inputElement = $(this).find('input[type=radio]').attr('id');
              btnShow();
              unclickRadio();
              removeActive();
              makeActive(inputElement);
              clickRadio(inputElement);
          });
      });

      function btnShow() {
          $("#address-btn").css("display", "block");
      }

      function unclickRadio() {
          $("input:radio").prop("checked", false);
      }

      function clickRadio(inputElement) {
          $("#" + inputElement).prop("checked", true);
      }

      function removeActive() {
          $(".card").removeClass("active");
      }

      function makeActive(element) {
          $("#" + element + "-card").addClass("active");
      }
      
    function addShipping(shippingCost, totalPrice) {
    const selectedOption = document.querySelector('input[name="shippingOption"]:checked').value;

    // Update shipping price
    const shippingPriceElement = document.getElementById('shippingPrice');
    shippingPriceElement.textContent = shippingCost;

    // Update total cart price
    const couponShowElement = document.querySelector('.couponShow');
    const couponText = couponShowElement.textContent;

    const totalPriceElement = document.getElementById('totalPriceValue');
    const newTotalPrice = parseFloat(totalPrice) + parseFloat(shippingCost)-parseFloat(couponText);
    totalPriceElement.textContent = newTotalPrice;
  }



  //coupon form
  const couponForm = document.getElementById('couponForm');

        couponForm.addEventListener('submit',(e)=>{
            e.preventDefault();

            const coupon = document.getElementById('couponName');
            const addressId = document.getElementById('addressId');
            // "<%= addressId %>"
            const selectedOption = document.querySelector('input[name="shippingOption"]:checked').value;
            axios({
                method: "post",
                url: "/admin/coupon/apply",
                data: {
                    couponName: coupon.value,
                    addressId: "<%= addressId %>",
                    totalPrice: '<%= cart.totalPrice %>',
                    selectedOption:selectedOption,
                }
            })
            .then((result)=>{
                if(result.data.response == false){
                    Swal.fire({
                    icon: "warning",
                    title: "Invalid coupon",
                    })
                    document.querySelector('.couponShow').innerHTML= `${0}`;
                    document.querySelector('.couponShow').removeAttribute("id");
                    document.getElementById('totalprice').innerHTML= `${'<%= cart.cartPrice %>'}`;
                }else if(result.data.response == "min"){

                    Swal.fire({
                        icon: "warning",
                        title: "You can't apply this coupon",
                    })

                }else{
                  Swal.fire({
                      icon: "success",
                      title: "Coupon Applied Successfully",
                      text: "Congratulations! The coupon has been applied to your order.",
                  });
                    document.querySelector('.couponShow').innerHTML= `${result.data.coupon.discount}`;
                    document.querySelector('.couponShow').setAttribute("id",result.data.coupon._id);
                    const totalPriceElement = document.getElementById('totalPriceValue');
                    let shippingCost  = document.getElementById('shippingPrice').textContent;
                    shippingCost  = parseInt(shippingCost )
                    const currentTotalPrice = '<%= cart.totalPrice %>'
                    // const newTotalPrice = currentTotalPrice - parseFloat(result.data.coupon.discount);
                    const newTotalPrice = currentTotalPrice - parseFloat(result.data.coupon.discount)+shippingCost;
                    totalPriceElement.textContent = newTotalPrice;
                }
            })
        })


        function placeorder(){
            const payment = document.querySelector('input[name="payment"]:checked').value;
            const couponId = document.querySelector('.couponShow').id;
        if(payment=="online"){
            handleOnlinePayment()
        }
        else{
            axios({
              method: "post",
              url: '/checkout',
              data: {
                payment: payment,
                  addressId: "<%= addressId %>",
                couponId: couponId,
                totalPrice: '<%= cart.totalPrice %>'
              }
            })
            .then((result)=>{
              if(result.data.response){
                location.href=`/order/success?orderId=${result.data.orderId}`;
              }else{
                if(result.data.wallet == "false" || result.data.wallet == "noprice"){
                        Swal.fire({
                            icon: "warning",
                            title: "you dont have enough balance",
                        })
                    }
              }
            })
          }
        }          
        function handleOnlinePayment(){
            const payment = document.querySelector('input[name="payment"]:checked').value;  
            let couponId = document.querySelector('.couponShow').id;
            if(!couponId){
              couponId=null;
            }
            const selectedOption = document.querySelector('input[name="shippingOption"]:checked').value;
          
            $.ajax({
              url: "/create-order",
              method: "post",
              data: {
                shippingOption:selectedOption,
                couponId:couponId,
                addressId: "<%= addressId %>",
                totalPrice: '<%= cart.totalPrice %>',
              },
                success: function(res){
                    if(res.success){
                        var options = {
                            "key": ""+res.key_id+"",
                            "amount": ""+res.amount+"",
                            "currency": "INR",
                            "name": "SolMate",
                            "image": "https://dummyimage.com/",
                            "order_id": ""+res.order_id+"",
                            "handler": function(response){

                                axios({
                                method: "post",
                                url: '/checkout',
                                data: {
                                  payment: payment,
                                  addressId: "<%= addressId %>",
                                  couponId: couponId,
                                  totalPrice: '<%= cart.totalPrice %>'
                                }  
                              })
                              .then((result)=>{
                                  if(result.data.response){
                                    location.href=`/order/success?orderId=${result.data.orderId}`;
                                  }
                                })

                            },
                            "prefill": {
                                "name": ""+res.name+"",
                                "email": ""+res.email+""
                            },
                            "theme": {
                                "color": "#7fad39"
                            }
                        };
                        var razorpayObject = new Razorpay(options);
                        razorpayObject.on('payment.failed', function (response){
                                alert("Payment Failed");
                        });
                        razorpayObject.open();
                    }
                }
            })
        }          
          </script>

