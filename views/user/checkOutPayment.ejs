<section class="checkout spad mt-5 mb-5">
  <div class="container">
    <div class="checkout__form mt-5 mb-5">

      
      <div class=" row m-5">
        <div class="col-lg-8">
          <h4>Billing Details</h4>
        </div>
        <div class="col-4 ">
          <form class="mb-30" id="couponForm">
            <div class="input-group">
              <input type="text" id="couponName" pattern="^(?!.*\s)[^\s]+(?<!\s)$" class="form-control border-0 form-control-sm text-dark font-weight-bold" style="box-shadow: none;background-color: #f5f5f5;" placeholder="Coupon Code" required>
              <div class="input-group-append ">
                <button type="submit"  class="btn btn-sm btn-dark" >Apply Coupon</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      
      <form  class="mt-5 mb-5" >
        <div class="row">
          <div class="col-lg-8 col-md-6 mt-5 mb-5">
            <div class="form-group">
              <div class="row">
                <div class="card-deck d-flex flex-wrap">
                  <div id="cod-card" class="cardx card mb-4" style="min-width: 15rem; max-height: 4rem;">
                    <div class="card-body" role="button">
                      <h5 class="card-title">
                        <input id="cod" value="cod" name="payment" type="radio">
                        <label for="cod">Cash On Delivery</label>
                      </h5>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="row mt-5 mb-5">
                <div class="card-deck d-flex flex-wrap">
                  <div id="Online-card" class="cardx card mb-4" style="min-width: 15rem; max-height: 4rem;">
                    <div class="card-body" role="button">
                      <h5 class="card-title">
                        <input id="Online" value="online" name="payment" type="radio">
                        <label for="Online">Online Payment</label>
                      </h5>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="card-deck d-flex flex-wrap">
                  <div id="cod-card" class="cardx card mb-4" style="min-width: 15rem; max-height: 4rem;">
                    <div class="card-body" role="button">
                      <h5 class="card-title">
                        <input id="wallet" value="wallet" name="payment" type="radio">
                        <label for="cod">Wallet</label>
                      </h5>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
          <input type="hidden" id="addressId" name="addressId" value="<%= addressId %>">
          <div class="col-lg-4 col-md-6 mt-5 mb-5">
            <div  >
              <h4> <u>Shipping Methods</u> </h4>
            </div>
            <div class="row">
              <div class="col">
                <div class="card-body shadow rounded mb-5">
                  <div class="form-check">
                    <input onchange="addShipping('0','<%=cart.totalPrice%>')" class="form-check-input" type="radio"
                      name="shippingOption" id="normalShipping" value="normal" checked>
                    <label class="form-check-label" for="normalShipping">
                      Normal 
                    </label>
                  </div>
                </div>
              </div>
              <div class="col">
                <div class="card-body shadow rounded mb-5">
                  <div class="form-check">
                    <input onchange="addShipping('40','<%=cart.totalPrice%>')" class="form-check-input" type="radio"
                      name="shippingOption" id="fastShipping" value="fast">
                    <label class="form-check-label" for="fastShipping">
                      Fast 
                    </label>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="checkout__order">
              <h4>Your Order</h4>
              <div class="checkout_order_products">Products <span>Total </span></div>
              <ul>
                <li>
                  <h6 class="font-weight-medium"><span>shipping  </span>$<span id="shippingPrice">0</span></>
                  </li>
                  <li>
                  <h6 class="font-weight-medium"><span>Coupon  </span>$<span class="couponShow" >0</span></>
                </li>
                <input type="hidden" name="session" value="<%=session%>">
              </ul>
              <input type="hidden" name="totalPrice" value="<%= cart.totalPrice %>">
              <div id="totalCart" class="checkout_order_total">Total <span>$<span id="totalPriceValue"><%= cart.totalPrice %></span></span></div>
              <button type="button" onclick="placeorder()" class="site-btn rounded">PLACE ORDER</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

