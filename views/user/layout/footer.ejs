  // Function to handle the slider change event and update the products
  function handleSliderChange(event) {
    // Prevent the default form submission behavior
    event.preventDefault();

    // Retrieve the current values of the sliders
    const fromValue = $('#fromSlider').val();
    const toValue = $('#toSlider').val();
    const searchQuery = $('#searchInput').val().trim();
    
    // Send data to the server using AJAX GET
