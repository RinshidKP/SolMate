      }).then((result) => {
        if (result.isConfirmed) {
            let response = axios({
            url: "/user/order/cancel",
            method: "POST",
            data: {
              id,
            },
          }).then((data)=>{
            if(data.data.status){
              Swal.fire({
                icon: "success",
                title: "Order Cancelled",
                text: "We are sorry to see you go",
                showConfirmButton: false,
                timer: 3000,
              }).then((res)=>{
                location.reload();
              })
            }else{
              Swal.fire({
