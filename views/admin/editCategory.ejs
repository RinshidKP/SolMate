<%-include("./layout/header")%>
    <div class="col-10">
        <div class="container py-5 mt-5" style="height: 500px">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-lg-8 col-xl-6">
                <div class="card rounded-3">
                  <form
                  action="/admin/category/edit?id=<%=category._id%>"
                  id="form"
                  method="post"
                  class="px-md-2 mt-5 m-5"
                  >
                    <div class="row mb-4 mt-5">
                      <div class="col-md-4">
                        <label class="form-label pt-2" for="form3Example1q"
                          >Enter Category Name</label
                        >
                      </div>
                      <div class="col-md-8">
                        <input
                          type="text"
                          id="name"
                          class="form-control"
                          name="name"
                          value="<%=category.name%>"
                          placeholder="Enter Category Name"
                          required
                        />
                      </div>
                    </div>
    
                    <div class="row mb-4">
                      <div class="col-md-4">
                        <label class="form-label pt-2" for="form3Example1q"
                          >Enter Sub Categories</label
                        >
                      </div>
                      <div class="col-md-8">
                        <input
                          type="text"
                          id="form3Example1q username"
                          class="form-control"
                          name="sub"
                          placeholder="Enter Sub Categories"
                          required
                        />
                      </div>
                    </div>
    
                    <div class="d-flex justify-content-center mt-2">
                      <button
                        type="submit"
                        style="background-color: #88C8BC; width: 200px"
                        class="btn align-items-center p-2"
                      >
                        Update
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>

</div>
</section>

<%-include("./layout/footer.ejs")%>