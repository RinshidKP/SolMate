<%-include("./layout/header")%>

    <div class="col-9 mx-5">
      <div class="container py-5 " style="height: 500px">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-8 col-xl-6">
            <div class="card rounded-3">
              <form
                action="/admin/product/add"
                id="form"
                method="post"
                class="px-md-2 m-4"
                enctype="multipart/form-data"
              >
                <div class="d-flex justify-content-start text-secondary">
                  <h4>Product Information</h4>
                </div>
                <hr />

                <div class="row mb-4">
                  <div>
                    <label class="form-label" for="name">Product Name</label>
                    <input
                      type="text"
                      id="name"
                      class="form-control"
                      name="name"
                      value=""
                      placeholder="Enter Product Name"
                      required
                    />
                  </div>
                </div>

                <div class="row mb-4">
                  <div class="col-md-4 form-group">
                    <div class="form-group">
                      <label for="exampleSelect" class="form-label"
                        >Category</label
                      >
                      <select class="form-control" name="category" id="exampleSelect">
                        <% category.forEach((category)=>{ %>
                        <option
                          value="<%= category._id %>"
                          class="bg-secondary text-white"
                        >
                          <%= category.name%>
                        </option>
                        <%})%>
                      </select>
                    </div>
                  </div>
                  
                  <div class="col-md-4 form-group">
                    <label class="form-label" for="form3Example1q">
                      Quantity</label
                    >
                    <input
                      type="number"
                      class="form-control"
                      name="stock"                      
                      placeholder="0"
                      min="0"
                      required
                    />
                  </div>

                  <div class="col-md-4 form-group">
                    <label class="form-label" for="form3Example1q">
                      Sales price</label
                    >
                    <input
                      type="number"
                      id=""
                      class="form-control"
                      name="price"
                      min="0"
                      pattern="^\d+\.\d{2}$"
                      placeholder="0.00"
                      required
                    />
                  </div>

                  <div class="col-12 mt-2 form-group">
                    <label class="form-label" for="">Blurb</label>
                    <textarea
                      name="blurb"
                      id=""
                      cols="30"
                      placeholder="Write a Short Description Here"
                      class="form-control resize-none rounded"
                      rows="2"
                      required
                    ></textarea>
                  </div>
                  <!-- outside -->
                  <div class="col-md-6 form-group mt-2">
                    <div class="form-group">
                      <label for="exampleSelect" class="form-label"
                        >Color Varients</label
                      ><input
                        type="text"
                        class="form-control"
                        name="color"
                        placeholder="red green black blue while"
                        required
                      />
                    </div>
                  </div>
                  <div class="col-md-6 form-group mt-2">
                    <label class="form-label" for="form3Example1q">
                      Sizes Available</label
                    >
                    <input
                      type="text"
                      id=""
                      class="form-control"
                      name="size"
                      placeholder="8 9  10 11 12"
                      required
                    />
                  </div>
                </div>

                <div class="col-12 mb-4 mt-1 form-group">
                  <label class="form-label" for="">Description</label>
                  <textarea
                    name="description"
                    id=""
                    cols="30"
                    placeholder="Write Product Description Here"
                    class="form-control resize-none rounded"
                    rows="2"
                    required
                  ></textarea>
                </div>
                <div class="form-group">
                  <label class="form-label" for="">Upload Photos</label>
                  <input
                    name="image"
                    class="form-control form-control-file"
                    type="file"
                    required
                    multiple="multiple"
                  />
                  <!-- <input class="form-control form-control-sm" name="image" style="box-shadow: none;" type="file" id="formFileMultiple" multiple> -->
                </div>

                <!-- <div class="d-flex justify-content-center">
                  <p class="bg-alert text-danger" id="error-field">
                    <%=message %>
                  </p>
                </div> -->

                <div class="d-flex justify-content-center mt-2">
                  <button
                    type="submit"
                    style="background-color: #81a642; width: 200px"
                    class="btn align-items-center p-2"
                  >
                    Add Product
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%-include("./layout/footer.ejs")%>
